        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "esModuleInterop": true
